<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		
		<LinearLayout
			android:id="@+id/post_header"
			android:minHeight="40dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		>
			<android.support.v4.CircleImageView
				android:id="@+id/post_item_user_image"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="10dp"
				android:src="@null"
				
				/>
			<TextView
				android:id="@+id/post_item_user_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="13sp"
				android:textColor="#f3d2e3"
				android:paddingLeft="10dp"
				android:layout_marginTop="10dp"
				android:textStyle="bold"
				/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/header_border"
			android:layout_width="2dp"
			android:layout_height="wrap_content"
			android:background="#ececec"
			></LinearLayout>
			<ImageView
				android:id="@+id/post_itemImage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:scaleType="fitStart"
				android:adjustViewBounds="true"
				/>
		<LinearLayout
			android:id="@+id/post_item_footer"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:orientation="horizontal"
			>
				<ImageView
					android:id="@+id/post_item_like"
					android:layout_width="45dp"
					android:layout_height="45dp"
					src="@null"
					android:background="#fffddf"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="5dp"
					/>
			<ImageView
				android:id="@+id/post_item_comment"
				android:layout_width="45dp"
				android:layout_height="45dp"
				src="@null"
				android:background="#ff02ce"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
			/>
		
			
			</LinearLayout>
		<LinearLayout
		android:id="@+id/footer_border"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="#ececec"
		></LinearLayout>
		<TextView
			android:id="@+id/post_itemText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="50dp"
			android:textDirection="rtl"
			android:textSize="20dp"
			android:textStyle="bold"
			android:paddingRight="7dp"
			/>
	</LinearLayout>
    
</android.support.v7.widget.CardView>
